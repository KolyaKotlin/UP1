<Page x:Class="_122_Fedchenko.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:_122_Fedchenko.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="AuthPage">

    <Grid HorizontalAlignment="Center"
          Width="800"
          Height="450"
          VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="271*" />
            <ColumnDefinition Width="529*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="217*" />
            <RowDefinition Height="233*" />
        </Grid.RowDefinitions>

        <Label Content="Пароль"
               x:Name="labelPass"
               Margin="173,188,0,232"
               HorizontalAlignment="Left"
               Width="64"
               Grid.RowSpan="2" />

        <Label Content="Логин"
               x:Name="labelLogin"
               Margin="173,112,0,75"
               HorizontalAlignment="Left"
               Width="64" />

        <TextBox x:Name="TextBoxLogin"
                 Background="Transparent"
                 Margin="62,0,0,75"
                 TextWrapping="Wrap"
                 ToolTip="Введите логин или почту"
                 Height="34"
                 VerticalAlignment="Bottom"
                 HorizontalAlignment="Left"
                 Width="134"
                 Grid.Column="1" />

        <PasswordBox x:Name="PasswordBox"
                     Background="Transparent"
                     ToolTip="Введите пароль"
                     Margin="0,0,333,0"
                     HorizontalAlignment="Right"
                     Width="134"
                     Height="32"
                     VerticalAlignment="Bottom"
                     Grid.Column="1" />

        <Button x:Name="ButtonEnter"
                Margin="69,20,0,0"
                Height="34"
                Content="Вход"
                Grid.Row="1"
                HorizontalAlignment="Left"
                Width="120"
                VerticalAlignment="Top"
                Grid.Column="1"
                Click="ButtonEnter_OnClick" />

        <Button x:Name="ButtonReg"
                Margin="69,68,0,0"
                Height="37"
                Content="Регистрация"
                Grid.Row="1"
                HorizontalAlignment="Left"
                Width="120"
                VerticalAlignment="Top"
                Grid.Column="1"
                Click="ButtonReg_Click" />

        <Button x:Name="ButtonChangePassword"
                Margin="69,120,0,0"
                Height="37"
                Content="Смена пароля"
                Grid.Row="1"
                HorizontalAlignment="Left"
                Width="120"
                VerticalAlignment="Top"
                Grid.Column="1"
                Click="ButtonChangePassword_Click" />

        <Label Content="Капча:"
               x:Name="labelCaptcha"
               Margin="172,94,0,97"
               HorizontalAlignment="Left"
               Width="54"
               Visibility="Hidden" />

        <TextBox Grid.Column="1"
                 CommandManager.PreviewExecuted="textBox_PreviewExecuted"
                 Visibility="Hidden"
                 x:Name="captcha"
                 Height="42"
                 Foreground="Red"
                 FontStyle="Italic"
                 FontWeight="Heavy"
                 VerticalAlignment="Top"
                 Width="156"
                 Background="{x:Null}"
                 FontStretch="UltraCondensed"
                 IsReadOnly="True"
                 HorizontalContentAlignment="Center"
                 HorizontalAlignment="Right"
                 Margin="0,96,322,0"
                 VerticalContentAlignment="Center"
                 FontSize="20" />

        <TextBox Grid.Column="1"
                 Visibility="Hidden"
                 x:Name="captchaInput"
                 HorizontalAlignment="Left"
                 Height="34"
                 Margin="49,183,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="160" />

        <Button x:Name="submitCaptcha"
                Margin="69,20,0,0"
                Visibility="Hidden"
                Height="34"
                Content="Подтвердить"
                Grid.Row="1"
                HorizontalAlignment="Left"
                Width="120"
                VerticalAlignment="Top"
                Grid.Column="1"
                Click="submitCaptcha_Click" />

        <TextBlock x:Name="txtHintLogin"
                   Text="Введите логин"
                   Foreground="Red"
                   Visibility="Hidden"
                   Grid.Row="0"
                   Grid.Column="1"
                   Margin="0,35,0,0" />

        <TextBlock x:Name="txtHintPass"
                   Text="Введите пароль"
                   Foreground="Red"
                   Visibility="Hidden"
                   Grid.Row="1"
                   Grid.Column="1"
                   Margin="0,35,0,0" />

    </Grid>
</Page>
