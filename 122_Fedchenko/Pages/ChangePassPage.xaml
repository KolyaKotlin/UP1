<Page x:Class="_122_Fedchenko.Pages.ChangePassPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ChangePassPage">

    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Смена пароля"
                   Grid.Row="0"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="DarkRed"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,20" />

        <Grid Grid.Row="1"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="250" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="15" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="15" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="15" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="30" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Text="Логин:"
                       Grid.Row="0"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       Margin="0,5" />
            <TextBox x:Name="TbLogin"
                     Grid.Row="0"
                     Grid.Column="1"
                     Height="28"
                     Margin="5" />
            
            <TextBlock Text="Текущий пароль:"
                       Grid.Row="2"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       Margin="0,5" />
            <PasswordBox x:Name="CurrentPasswordBox"
                         Grid.Row="2"
                         Grid.Column="1"
                         Height="28"
                         Margin="5" />

            <TextBlock Text="Новый пароль:"
                       Grid.Row="4"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       Margin="0,5" />
            <PasswordBox x:Name="NewPasswordBox"
                         Grid.Row="4"
                         Grid.Column="1"
                         Height="28"
                         Margin="5" />

            <TextBlock Text="Подтверждение нового пароля:"
                       Grid.Row="6"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       Margin="0,5" />
            <PasswordBox x:Name="ConfirmPasswordBox"
                         Grid.Row="6"
                         Grid.Column="1"
                         Height="28"
                         Margin="5" />

            <Button x:Name="BtnSave"
                    Grid.Row="8"
                    Grid.ColumnSpan="2"
                    Content="Сохранить изменения"
                    Width="200"
                    Height="35"
                    HorizontalAlignment="Center"
                    Click="BtnSave_Click" />
        </Grid>
    </Grid>
</Page>
