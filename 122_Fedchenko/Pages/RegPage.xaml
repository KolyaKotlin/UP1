<Page x:Class="_122_Fedchenko.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="RegPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="61*" />
            <ColumnDefinition Width="739*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="*" />
            <RowDefinition Height="45" />
        </Grid.RowDefinitions>

        <!-- Подписи слева -->
        <Label Grid.Column="1"
               Content="Введите логин"
               HorizontalAlignment="Left"
               Margin="91,13,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Width="128" />
        <Label Grid.Column="1"
               Content="Введите пароль"
               HorizontalAlignment="Left"
               Margin="91,65,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Width="128" />
        <Label Grid.Column="1"
               Content="Подтвердите пароль"
               HorizontalAlignment="Left"
               Margin="91,118,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Width="169" />
        <Label Grid.Column="1"
               Content="Выберите роль"
               HorizontalAlignment="Left"
               Margin="91,177,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Width="128" />
        <Label Grid.Column="1"
               Content="Введите ФИО"
               HorizontalAlignment="Left"
               Margin="91,250,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Width="128" />

        <!-- Поля -->
        <TextBox x:Name="txtbxLog"
                 Background="Transparent"
                 ToolTip="Введите логин или почту"
                 Grid.Column="1"
                 HorizontalAlignment="Left"
                 Margin="339,13,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="182"
                 Height="29" />

        <PasswordBox x:Name="passBxFrst"
                     Background="Transparent"
                     ToolTip="Введите пароль"
                     Grid.Column="1"
                     HorizontalAlignment="Left"
                     Margin="339,65,0,0"
                     Grid.Row="1"
                     VerticalAlignment="Top"
                     Width="182"
                     Height="33" />

        <PasswordBox x:Name="passBxScnd"
                     Background="Transparent"
                     ToolTip="Повторите пароль"
                     Grid.Column="1"
                     HorizontalAlignment="Left"
                     Margin="339,118,0,0"
                     Grid.Row="1"
                     VerticalAlignment="Top"
                     Width="182"
                     Height="33" />

        <ComboBox x:Name="comboBxRole"
                  Grid.Column="1"
                  ToolTip="Выберите роль"
                  HorizontalAlignment="Left"
                  Margin="339,180,0,0"
                  Grid.Row="1"
                  VerticalAlignment="Top"
                  Width="182"
                  Height="37">
            <ComboBoxItem Content="User" />
            <ComboBoxItem Content="Admin" />
        </ComboBox>

        <TextBox x:Name="txtbxFIO"
                 Background="Transparent"
                 ToolTip="Введите ФИО"
                 Grid.Column="1"
                 Margin="339,243,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 Height="43"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Left"
                 Width="182" />

        <!-- Кнопка -->
        <Button x:Name="regButton"
                Grid.Column="1"
                Content="Зарегистрироваться"
                HorizontalAlignment="Left"
                Margin="345,302,0,0"
                Grid.Row="1"
                VerticalAlignment="Top"
                Width="170"
                Click="regButton_Click" />
    </Grid>
</Page>
